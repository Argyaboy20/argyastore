<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Argya Store | Toko Produk Digital</title>
  <link rel="icon" type="image/png" href="/image/store.png">
  <link rel="stylesheet" href="/style.css">
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
</head>
<body>
  <!-- Header -->
  <header class="header">
    <div class="container">
      <div class="logo">
        <img src="image/logo.png" alt="Argya Store" style="width: 64px; height: 64px; object-fit: contain;">
        <span>Argya Store</span>
      </div>
      <nav class="nav">
        <a href="/support">Support</a>
        <div class="user-menu" onclick="handleUserMenuClick()">
          <i class="fas fa-user-circle"></i>
        </div>
      </nav>
    </div>
  </header>

  <main class="main">
    <!-- Hero Section -->
    <section class="hero">
      <div class="container">
        <div class="hero-content">
          <h1>Toko Produk Digital Termurah di Indonesia</h1>
          <p>Beli pulsa, paket data, top up game, dan produk digital lainnya dengan mudah dan aman!</p>
          <div class="hero-stats">
            <div class="stat">
              <i class="fas fa-wallet"></i>
              <span>Ramah Di Kantong</span>
            </div>
            <div class="stat">
              <i class="fas fa-shield-alt"></i>
              <span>100% Aman</span>
            </div>
            <div class="stat">
              <i class="fas fa-clock"></i>
              <span>24/7 Support</span>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Products Grid -->
    <section class="products">
      <div class="container">
        <h2 class="section-title">Produk Digital Terlengkap</h2>
        
        <div class="products-grid">
          <!-- Pulsa -->
          <div class="product-card" onclick="openModal('pulsaModal')">
            <div class="product-icon">
              <i class="fas fa-mobile-alt"></i>
            </div>
            <h3>Pulsa</h3>
            <p>Isi pulsa semua operator</p>
            <div class="product-badge">Populer</div>
          </div>

          <!-- Paket Data -->
          <div class="product-card" onclick="openModal('dataModal')">
            <div class="product-icon">
              <i class="fas fa-wifi"></i>
            </div>
            <h3>Paket Data</h3>
            <p>Paket internet terjangkau</p>
          </div>

          <!-- Top Up Game -->
          <div class="product-card" onclick="window.location.href='/game'">
            <div class="product-icon">
              <i class="fas fa-gamepad"></i>
            </div>
            <h3>Top Up Game</h3>
            <p>Diamond, UC, Genesis Crystal</p>
            <div class="product-badge trending">Trending</div>
          </div>

          <!-- App Streaming -->
          <div class="product-card" onclick="window.location.href='/entertainment'">
            <div class="product-icon">
              <i class="fas fa-play-circle"></i>
            </div>
            <h3>App Streaming</h3>
            <p>Netflix, Spotify, YouTube</p>
          </div>

          <!-- Token Listrik -->
          <div class="product-card" onclick="openModal('tokenModal')">
            <div class="product-icon">
              <i class="fas fa-bolt"></i>
            </div>
            <h3>Token Listrik</h3>
            <p>PLN Prabayar instan</p>
          </div>

          <!-- E-Wallet -->
          <div class="product-card" onclick="openModal('ewalletModal')">
            <div class="product-icon">
              <i class="fas fa-wallet"></i>
            </div>
            <h3>Top Up E-Wallet</h3>
            <p>OVO, GoPay, DANA, ShopeePay</p>
          </div>

           <!-- E-SIM -->
          <div class="product-card" onclick="openModal('esimModal')">
            <div class="product-icon">
              <i class="fas fa-sim-card"></i>
            </div>
            <h3>Beli E-SIM</h3>
            <p>Kartu digital praktis</p>
            <div class="product-badge new">New</div>
          </div>
        </div>
      </div>
    </section>

    <!-- Features -->
    <section class="features">
      <div class="container">
        <div class="features-grid">
          <div class="feature">
            <i class="fas fa-bolt"></i>
            <h3>Proses Instan</h3>
            <p>Transaksi diproses dalam hitungan menit</p>
          </div>
          <div class="feature">
            <i class="fas fa-tags"></i>
            <h3>Harga Terjangkau</h3>
            <p>Dapatkan harga terbaik dengan berbagai promo</p>
          </div>
          <div class="feature">
            <i class="fas fa-headset"></i>
            <h3>Customer Service 24/7</h3>
            <p>Tim support siap membantu kapan saja</p>
          </div>
        </div>
      </div>
    </section>
  </main>

  <!-- Modal Pulsa -->
  <div id="pulsaModal" class="pulsamodal">
    <div class="pulsamodal-content">
      <div class="pulsamodal-header">
        <h2><i class="fas fa-mobile-alt"></i> Beli Pulsa</h2>
        <span class="pulsaclose" onclick="closeModal('pulsaModal')">&times;</span>
      </div>
      <div class="pulsamodal-body">
        <!-- Provider Selection Grid -->
        <div class="pulsaform-group">
          <label>Pilih Provider</label>
          <div class="pulsaprovider-grid">
            <div class="pulsaprovider-item" data-provider="indosat">
              <div class="pulsaprovider-name">Indosat</div>
            </div>
            <div class="pulsaprovider-item" data-provider="smartfren">
              <div class="pulsaprovider-name">Smartfren</div>
            </div>
            <div class="pulsaprovider-item" data-provider="telkomsel">
              <div class="pulsaprovider-name">Telkomsel</div>
            </div>
            <div class="pulsaprovider-item" data-provider="tri">
              <div class="pulsaprovider-name">Tri</div>
            </div>
            <div class="pulsaprovider-item" data-provider="xl">
              <div class="pulsaprovider-name">XL</div>
            </div>
            <div class="pulsaprovider-item" data-provider="byu">
              <div class="pulsaprovider-name">by.U</div>
            </div>
          </div>
        </div>

        <div class="pulsaform-group">
          <label>Nomor HP</label>
          <input type="text" placeholder="08xx-xxxx-xxxx" class="pulsaform-input" id="pulsaPhoneInput">
          <div id="phoneVerificationStatus" class="phone-verification-status" style="display: none;">
            <div class="verification-message"></div>
          </div>
        </div>

        <!-- Denomination Grid -->
        <div class="pulsadenomination-grid" id="pulsaDenominations">
          <div class="pulsadenomination-item">
            <div class="amount">Rp 100.000</div>
            <div class="price">Pilih provider dulu</div>
            <div class="discount">-</div>
          </div>
          <div class="pulsadenomination-item">
            <div class="amount">Rp 80.000</div>
            <div class="price">Pilih provider dulu</div>
            <div class="discount">-</div>
          </div>
          <div class="pulsadenomination-item">
            <div class="amount">Rp 50.000</div>
            <div class="price">Pilih provider dulu</div>
            <div class="discount">-</div>
          </div>
        </div>

        <div class="pulsapayment-method">
          <h4>Pilih Metode Pembayaran</h4>
          <div class="pulsapayment-options">
              <div class="pulsapayment-btn">
                <i class="fas fa-wallet"></i>
                <span>E-Wallet</span>
              </div>
              <div class="pulsapayment-btn">
                <i class="fas fa-university"></i>
                <span>Bank Transfer</span>
              </div>
              <div class="pulsapayment-btn">
                <i class="fas fa-qrcode"></i>
                <span>QRIS</span>
              </div>
          </div>
        </div>

        <div class="modal-buttons-container">
          <button class="btn-primary btn-admin" onclick="">Beli Pulsa</button>
          <button class="btn-primary btn-whatsapp" onclick="buyPulsa()">Beli Pulsa di WhatsApp</button>
        </div>
      </div>
    </div>
  </div>

  <!-- Modal Paket Data -->
  <div id="dataModal" class="paketmodal">
    <div class="paketmodal-content">
      <div class="paketmodal-header">
        <h2><i class="fas fa-wifi"></i> Paket Data</h2>
        <span class="paketclose" onclick="closeModal('dataModal')">&times;</span>
      </div>
      <div class="paketmodal-body">
        <!-- Provider Selection Grid -->
        <div class="paketform-group">
          <label>Pilih Provider</label>
          <div class="paketprovider-grid">
            <div class="paketprovider-item" data-provider="xl">
              <div class="paketprovider-name">XL</div>
            </div>
            <div class="paketprovider-item" data-provider="telkomsel">
              <div class="paketprovider-name">Telkomsel</div>
            </div>
            <div class="paketprovider-item" data-provider="smartfren">
              <div class="paketprovider-name">Smartfren</div>
            </div>
            <div class="paketprovider-item" data-provider="indosat">
              <div class="paketprovider-name">Indosat</div>
            </div>
            <div class="paketprovider-item" data-provider="byu">
              <div class="paketprovider-name">by.U</div>
            </div>
            <div class="paketprovider-item" data-provider="axis">
              <div class="paketprovider-name">Axis</div>
            </div>
            <div class="paketprovider-item" data-provider="tri">
              <div class="paketprovider-name">Tri</div>
            </div>
          </div>
        </div>

        <div class="paketform-group">
          <label>Nomor HP</label>
          <input type="text" placeholder="08xx-xxxx-xxxx" class="paketform-input" id="paketPhoneInput">
          <!-- Status verifikasi nomor untuk paket data -->
          <div id="paketPhoneVerificationStatus" class="phone-verification-status" style="display: none;">
            <div class="verification-message"></div>
          </div>
        </div>

        <!-- Package Grid -->
        <div class="paket-packages" id="paketPackages">
          <div class="paket-item">
            <div class="paket-name">Pilih provider dulu</div>
            <div class="paket-provider">-</div>
            <div class="paket-price">Rp -</div>
          </div>
        </div>

        <div class="paketpayment-method">
          <h4>Pilih Metode Pembayaran</h4>
          <div class="paketpayment-options">
            <div class="paketpayment-btn">
              <i class="fas fa-wallet"></i>
              <span>E-Wallet</span>
            </div>
            <div class="paketpayment-btn">
              <i class="fas fa-university"></i>
              <span>Bank Transfer</span>
            </div>
            <div class="paketpayment-btn">
              <i class="fas fa-qrcode"></i>
              <span>QRIS</span>
            </div>
          </div>
        </div>

        <div class="modal-buttons-container">
          <button class="btn-primary btn-admin" onclick="">Beli Paket</button>
          <button class="btn-primary btn-whatsapp" onclick="buyPaketData()">Beli Paket di WhatsApp</button>
        </div>
      </div>
    </div>
  </div>

    <!-- Modal E-Wallet -->
  <div id="ewalletModal" class="ewalletmodal">
    <div class="ewalletmodal-content">
      <div class="ewalletmodal-header">
        <h2><i class="fas fa-wallet"></i> Top Up E-Wallet</h2>
        <span class="ewalletclose" onclick="closeModal('ewalletModal')">&times;</span>
      </div>
      <div class="ewalletmodal-body">
        <!-- E-Wallet Selection -->
        <div class="ewalletform-group">
          <label>Pilih E-Wallet</label>
          <div class="ewallet-selection">
            <div class="ewallet-select-btn active" data-ewallet="ovo">
              <img src="/image/ovo.jpg" alt="OVO">
              <span>Ovo</span>
            </div>
            <div class="ewallet-select-btn" data-ewallet="gopay">
              <img src="/image/gopay.jpg" alt="GoPay">
              <span>GoPay</span>
            </div>
            <div class="ewallet-select-btn" data-ewallet="dana">
              <img src="/image/dana.jpg" alt="DANA">
              <span>Dana</span>
            </div>
            <div class="ewallet-select-btn" data-ewallet="shopeepay">
              <img src="/image/shopeepay.jpg" alt="Shopee">
              <span>ShopeePay</span>
            </div>
          </div>
        </div>

        <div class="ewalletform-group">
          <label>Nomor HP</label>
          <input type="text" placeholder="08xx-xxxx-xxxx" class="ewalletform-input">
        </div>

        <!-- Denomination Grid -->
        <div class="ewallet-denomination-grid" id="ewalletDenominations">
        <div class="ewalletdenomination-item">
          <div class="amount">Rp 100.000</div>
          <div class="price">Pilih e-wallet dulu</div>
          <div class="fee">-</div>
        </div>
        <div class="ewalletdenomination-item">
          <div class="amount">Rp 80.000</div>
          <div class="price">Pilih e-wallet dulu</div>
          <div class="fee">-</div>
        </div>
        <div class="ewalletdenomination-item">
          <div class="amount">Rp 50.000</div>
          <div class="price">Pilih e-wallet dulu</div>
          <div class="fee">-</div>
        </div>
      </div>

        <div class="ewalletpayment-method">
          <h4>Pilih Metode Pembayaran</h4>
          <div class="ewalletpayment-options">
            <div class="ewalletpayment-btn">
              <i class="fas fa-wallet"></i>
              <span>E-Wallet</span>
            </div>
            <div class="ewalletpayment-btn">
              <i class="fas fa-university"></i>
              <span>Bank Transfer</span>
            </div>
            <div class="ewalletpayment-btn">
              <i class="fas fa-qrcode"></i>
              <span>QRIS</span>
            </div>
          </div>
        </div>

        <div class="modal-buttons-container">
          <button class="btn-primary btn-admin" onclick="">Top Up Sekarang</button>
          <button class="btn-primary btn-whatsapp" onclick="buyEwallet()">Top Up di WhatsApp</button>
        </div>
      </div>
    </div>
  </div>

  <!-- Modal Token Listrik -->
  <div id="tokenModal" class="modal">
    <div class="modal-content">
      <div class="modal-header">
        <h2><i class="fas fa-bolt"></i> Token Listrik PLN</h2>
        <span class="close" onclick="closeModal('tokenModal')">&times;</span>
      </div>
      <div class="modal-body">
        <div class="form-group">
          <label>ID Pelanggan PLN</label>
          <!-- SIMPLIFIED: Hilangkan semua atribut validasi dan event handler -->
          <input type="text" placeholder="Masukkan ID Pelanggan PLN" class="form-input">
          <!-- TIDAK ADA LAGI div untuk alert validasi -->
        </div>
        <!-- Denomination grid akan di-generate dinamis oleh JavaScript -->
        <div class="denomination-grid">
          <!-- Konten akan di-generate oleh JavaScript dari data products -->
        </div>

        <div class="payment-method">
          <h4>Pilih Metode Pembayaran</h4>
          <div class="payment-options">
              <div class="payment-btn">
                <i class="fas fa-wallet"></i>
                <span>E-Wallet</span>
              </div>
              <div class="payment-btn">
                <i class="fas fa-university"></i>
                <span>Bank Transfer</span>
              </div>
              <div class="payment-btn">
                <i class="fas fa-qrcode"></i>
                <span>QRIS</span>
              </div>
          </div>
        </div>

        <!-- Tetap pakai fungsi buyTokenListrik() tapi tanpa validasi kompleks -->
        <div class="modal-buttons-container">
          <button class="btn-primary btn-admin" onclick="">Beli Token</button>
          <button class="btn-primary btn-whatsapp" onclick="buyTokenListrik()">Beli Token di WhatsApp</button>
        </div>
      </div>
    </div>
  </div>

  <!-- Modal E-SIM -->
  <div id="esimModal" class="modal">
  <div class="modal-content">
    <div class="modal-header">
      <h2><i class="fas fa-sim-card"></i> Beli E-SIM</h2>
      <span class="close" onclick="closeModal('esimModal')">&times;</span>
    </div>
    <div class="modal-body">
      <div class="esim-info">
        <div class="info-card">
          <h4>Apa itu E-SIM?</h4>
          <p>Kartu SIM digital yang dapat diaktivasi langsung di perangkat Anda tanpa perlu kartu fisik.</p>
        </div>
      </div>
      <div class="form-group">
        <label>Pilih Provider</label>
        <select class="form-input" onchange="updateEsimPrice()" id="esimProviderSelect">
          <option value="Pilih Provider">Klik di sini</option>
          <option value="Telkomsel E-SIM 3GB">Telkomsel E-SIM 3GB</option>
          <option value="Indosat E-SIM 3GB 30hr">Indosat E-SIM 3GB 30hr</option>
        </select>
      </div>
      <div class="form-group">
        <label>Email <span style="color: red;">*</span></label>
        <input type="email" placeholder="email@example.com" class="form-input" required>
        <label>Nomor Telepon <span style="color: red;">*</span></label>
        <input type="text" placeholder="08xx-xxxx-xxxx" class="form-input" required id="esimPhoneInput">
        <!-- TAMBAHAN BARU: Status verifikasi nomor untuk E-SIM -->
        <div id="esimPhoneVerificationStatus" class="phone-verification-status" style="display: none;">
          <div class="verification-message"></div>
        </div>
      </div>

      <div class="payment-method">
        <h4>Pilih Metode Pembayaran</h4>
        <div class="payment-options">
            <div class="payment-btn">
              <i class="fas fa-wallet"></i>
              <span>E-Wallet</span>
            </div>
            <div class="payment-btn">
              <i class="fas fa-university"></i>
              <span>Bank Transfer</span>
            </div>
            <div class="payment-btn">
              <i class="fas fa-qrcode"></i>
              <span>QRIS</span>
            </div>
        </div>
      </div>

      <div class="esim-price">
        <div class="price-info">
          <span>Harga E-SIM</span>
          <span class="price">Rp -</span>
        </div>
      </div>
      <div class="modal-buttons-container">
        <button class="btn-primary btn-admin" onclick="">Beli E-SIM</button>
        <button class="btn-primary btn-whatsapp" onclick="buyEsim()">Beli E-SIM di WhatsApp</button>
      </div>
    </div>
  </div>
</div>

  <!-- Tambahkan script JavaScript terpisah -->
  <script src="/js/home.js"></script>

  <!-- Scroll to Top Button -->
<button id="scrollToTopBtn" class="scroll-to-top">
  <i class="fas fa-chevron-up"></i>
</button>

    <!-- Modal Daftar Akun -->
    <div id="registerModal" class="register-modal">
      <div class="register-modal-content">
        <div class="register-modal-header">
          <h2><i class="fas fa-user-plus"></i> Daftar Akun</h2>
          <button class="register-close" onclick="closeRegisterModal()">&times;</button>
        </div>
        <div class="register-modal-body">
          <div class="register-info">
            <h4>Mengapa Perlu Daftar Akun?</h4>
            <p>Dengan akun, Anda bisa melacak riwayat transaksi, menyimpan nomor favorit, dan mendapat notifikasi promo khusus!</p>
          </div>

          <div class="register-form-group">
            <label>Nama User <span style="color: red;">*</span></label>
            <input type="text" placeholder="Masukkan nama user" class="register-form-input" id="registerName" required>
            <div class="input-alert" id="nameAlert"></div>
          </div>
          
          <div class="register-form-group">
            <label>Email <span style="color: red;">*</span></label>
            <input type="email" placeholder="contoh@email.com" class="register-form-input" id="registerEmail" required>
            <div class="input-alert" id="emailAlert"></div>
          </div>

          <div class="register-form-group">
            <label>Password <span style="color: red;">*</span></label>
            <div class="password-input-wrapper">
              <input type="password" placeholder="Minimal 6 karakter" class="register-form-input" id="registerPassword" required>
              <button type="button" class="password-toggle-btn" onclick="togglePassword('registerPassword')">
                <i class="fas fa-eye" id="registerPasswordToggleIcon"></i>
              </button>
            </div>
            <div class="input-alert" id="passwordAlert"></div>
          </div>

          <button class="btn-register" onclick="registerAccount()">Daftar Akun</button>

          <div class="register-link">
            <p>Sudah punya akun? <a href="#" onclick="openLoginModal()">Masuk</a></p>
          </div>
        </div>
      </div>
    </div>

  <!-- Modal Login dengan Autocomplete -->
  <div id="loginModal" class="register-modal">
      <div class="register-modal-content">
          <div class="register-modal-header">
              <h2><i class="fas fa-sign-in-alt"></i> Masuk Akun</h2>
              <button class="register-close" onclick="closeLoginModal()">&times;</button>
          </div>
          <div class="register-modal-body">
              <div class="register-info">
                  <h4>Selamat Datang Kembali!</h4>
                  <p>Masuk ke akun Anda untuk melanjutkan berbelanja dan mengakses fitur lengkap Argya Store.</p>
              </div>
              <div class="register-form-group">
                  <label>Nama User <span style="color: red;">*</span></label>
                  <div class="autocomplete-wrapper">
                      <input type="text" placeholder="Masukkan nama user" class="register-form-input" id="loginName" required autocomplete="off">
                      <div class="autocomplete-suggestions" id="loginNameSuggestions"></div>
                  </div>
                  <div class="input-alert" id="loginNameAlert"></div>
              </div>
              <div class="register-form-group">
                  <label>Password <span style="color: red;">*</span></label>
                  <div class="password-input-wrapper">
                      <input type="password" placeholder="Masukkan password" class="register-form-input" id="loginPassword" required>
                      <button type="button" class="password-toggle-btn" onclick="togglePassword('loginPassword')">
                          <i class="fas fa-eye" id="loginPasswordToggleIcon"></i>
                      </button>
                  </div>
                  <div class="input-alert" id="loginPasswordAlert"></div>
              </div>
              <button class="btn-register" onclick="loginAccount()">Masuk Akun</button>
              <div class="register-link">
                  <p>Lupa Password? <a href="#" onclick="openClaimModal()">Klaim Akun</a></p>
              </div>
          </div>
      </div>
  </div>
    
    <!-- Modal Klaim Akun -->
  <div id="claimModal" class="register-modal">
      <div class="register-modal-content">
          <div class="register-modal-header">
              <h2><i class="fas fa-key"></i> Klaim Akun</h2>
              <button class="register-close" onclick="closeClaimModal()">&times;</button>
          </div>
          <div class="register-modal-body">
              <div class="register-info">
                  <h4>Klaim Akun Anda</h4>
                  <p>Masukkan email yang terdaftar untuk mendapatkan informasi akun dan password Anda.</p>
              </div>
              <div class="register-form-group">
                  <label>Email <span style="color: red;">*</span></label>
                  <input type="email" placeholder="contoh@email.com" class="register-form-input" id="claimEmail" required>
                  <div class="input-alert" id="claimEmailAlert"></div>
              </div>
              <button class="btn-register" onclick="claimAccount()">Klaim Akun</button>
              <div class="register-link">
                  <p>Kembali ke <a href="#" onclick="openLoginModal()">Masuk Akun</a></p>
              </div>
          </div>
      </div>
  </div>
</body>
</html>