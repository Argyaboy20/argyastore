<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Admin Argya Store</title>
  <link rel="icon" type="image/png" href="/image/store.png">
  <link rel="stylesheet" href="/adminstore.css">
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
</head>
<body>
  <!-- Side Menu Overlay -->
  <div class="side-menu-overlay" id="sideMenuOverlay" onclick="closeSideMenu()"></div>
  
  <!-- Side Menu -->
  <div class="side-menu" id="sideMenu">
    <div class="side-menu-header">
      <h3>Pengaturan</h3>
      <button class="close-menu-btn" onclick="closeSideMenu()">
        <i class="fas fa-times"></i>
      </button>
    </div>
    <div class="side-menu-content">
      <a href="/performa" class="menu-item">
        <i class="fa-solid fa-chart-line"></i>
        <span>Performa Toko</span>
      </a>
      <a href="/buatvoucher" class="menu-item">
        <i class="fa-solid fa-ticket"></i>
        <span>Buat Voucher</span>
      </a>
    </div>
  </div>

  <!-- Header -->
  <header class="header">
    <div class="container">
      <button class="menu-toggle" onclick="openSideMenu()">
        <i class="fas fa-bars"></i>
      </button>
      
      <div class="logo">
        <div class="logo-image-wrapper">
          <img src="image/logo.png" alt="Argya Store">
        </div>
        <span>Admin Argya Store</span>
      </div>
      
      <div class="header-spacer"></div>
    </div>
  </header>

  <script src="/js/adminstore.js"></script>
</body>
</html>